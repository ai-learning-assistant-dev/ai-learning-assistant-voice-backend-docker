# AI语音助手后端环境变量配置
# 用于Docker部署的环境变量设置

# ==================== ASR服务配置 ====================
# ASR引擎类型 (目前支持: sensevoice)
ASR_ENGINE=sensevoice

# ASR计算设备 (cuda/cpu)
ASR_DEVICE=cuda

# SenseVoice模型配置
SENSEVOICE_MODEL=iic/SenseVoiceSmall
SENSEVOICE_MODEL_REVISION=v1.0.0

# 模型空闲超时时间（秒，0表示不卸载）
MODEL_IDLE_TIMEOUT=0

# 音频采样率
SAMPLE_RATE=16000

# Hugging Face Token（如需要）
HF_TOKEN=

# ==================== TTS服务配置 ====================
# 默认TTS模型
DEFAULT_MODEL=kokoro

# 音频采样率
AUDIO_SAMPLE_RATE=24000

# ==================== CUDA配置 ====================
# 指定使用的GPU设备（多GPU环境下）
CUDA_VISIBLE_DEVICES=0

# ==================== Docker配置 ====================
# ASR服务端口
ASR_PORT=9000

# TTS服务端口
TTS_PORT=8000

# 模型缓存目录
MODELS_CACHE_DIR=./models_cache

# ==================== 高级配置 ====================
# 字幕配置
SUBTITLE_MAX_LINE_WIDTH=1000
SUBTITLE_MAX_LINE_COUNT=2
SUBTITLE_HIGHLIGHT_WORDS=false

# FFmpeg路径（如果需要自定义）
# FFMPEG_PATH=/usr/bin/ffmpeg 